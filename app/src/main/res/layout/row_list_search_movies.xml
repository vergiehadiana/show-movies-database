<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv__row_list_search_movies__image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@drawable/no_image_found"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/mrb__row_list_search_movies__rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:numStars="10"
                android:stepSize="0.5"
                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator" />

            <TextView
                android:id="@+id/tv__row_list_search_movies__title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:gravity="center"
                android:text="(Title)"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv__row_list_search_movies__release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="(Release Date)"
                android:textSize="12dp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tv__row_list_search_movies__overview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:padding="3dp"
                android:gravity="center|fill"
                android:text="(Overview)"
                android:textSize="10dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>